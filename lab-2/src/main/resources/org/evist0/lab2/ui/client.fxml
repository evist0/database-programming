<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ButtonType?>

<DialogPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" prefWidth="300">
    <content>
        <VBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <VBox spacing="5.0">
                <VBox>
                    <Label text="Фамилия"/>
                    <TextField fx:id="surnameTextField"/>
                </VBox>
                <VBox layoutX="30.0" layoutY="30.0">
                    <Label text="Имя"/>
                    <TextField fx:id="nameTextField"/>
                </VBox>
                <VBox layoutX="30.0" layoutY="72.0">
                    <Label text="Отчество"/>
                    <TextField fx:id="patronymicTextField"/>
                </VBox>
            </VBox>
            <VBox>
                <Label text="Паспорт"/>
                <TextField fx:id="passportTextField"/>
            </VBox>
            <VBox layoutX="30.0" layoutY="196.0">
                <Label text="Адрес"/>
                <TextField fx:id="addressTextField"/>
            </VBox>
            <VBox layoutX="30.0" layoutY="258.0">
                <Label text="Телефон"/>
                <TextField fx:id="phoneTextField"/>
            </VBox>
        </VBox>
    </content>

    <ButtonType text="Подтвердить" buttonData="APPLY"/>
</DialogPane>
